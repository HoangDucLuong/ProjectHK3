@model List<Product>

@{
    ViewData["Title"] = "Home Page";
    var productList = ViewBag.ApiData as List<Product>;
    Layout = "~/Views/Shared/_ProductLayout.cshtml";
}

@section ProductList {

    @if (Model != null && Model.Any())
    {
            @foreach (var product in Model)
            {

			<div class="product-item men">
				<div class="product discount product_filter">
					<div class="product_image">
						<img src="images/product_1.png" alt="">
					</div>
					<div class="favorite favorite_left"></div>
					<div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-$20</span></div>
					<div class="product_info">
						<h6 class="product_name"><a href="@Url.Action("Index", "Product", new { id = product.maSanPham })">@product.moTaSanPham</a></h6>
						<div class="product_price">$@product.gia<span>$@product.gia</span></div>
					</div>
				</div>
				<div class="red_button add_to_cart_button"><a href="#" id="addDonHang">add to cart</a></div>
			</div>

            }
    }
    else
    {
        <p>Không có sản phẩm nào.</p>
    }
}