<script>
    // Lấy reference đến form
    var form = document.getElementById('loginForm');

    // Gắn sự kiện submit cho form
    form.addEventListener('submit', function(event) {
        // Ngăn chặn hành động mặc định của form
        event.preventDefault();

        // Gọi hàm để gửi POST request đến API
        loginUser();
    });

    // Hàm gửi POST request đến API
    function loginUser() {
        // Tạo một XMLHttpRequest
        var xhr = new XMLHttpRequest();
        
        // Thiết lập phương thức và URL của request
        xhr.open('POST', '/YourController/Login', true);

        // Xử lý response từ API
        xhr.onload = function () {
            if (xhr.status >= 200 && xhr.status < 300) {
                // Parse dữ liệu JSON từ response
                var responseData = JSON.parse(xhr.responseText);

                // Xử lý dữ liệu đã parse được (ví dụ: hiển thị hoặc xử lý nó)
                console.log(responseData);
            } else {
                console.error('Request failed');
            }
        };

        // Xử lý lỗi nếu có
        xhr.onerror = function () {
            console.error('Request failed');
        };

        // Gửi request
        xhr.send();
    }
</script>

